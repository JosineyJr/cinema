<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.cinema.main.views.MenuView">
  <menus>
    <Menu fx:id="movies" mnemonicParsing="false" text="Filmes">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#listAvailableSessions"
          text="Visualizar sessoes disponiveis" />
      </items>
    </Menu>
    <Menu fx:id="products" mnemonicParsing="false" text="Produtos">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#listProductsToSale"
          text="Visualizar produtos disponiveis" />
      </items>
    </Menu>
    <Menu fx:id="cart" mnemonicParsing="false" text="Carrinho">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#listCart" text="Visualizar carrinho" />
      </items>
    </Menu>
    <Menu fx:id="profile" mnemonicParsing="false" text="Perfil">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#showProfile" text="Visualizar perfil" />
      </items>
    </Menu>
    <Menu fx:id="management" mnemonicParsing="false" text="Gerenciamento">
      <items>
        <Menu mnemonicParsing="false" text="Genero dos filmes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerGenre" text="Cadastrar genero" />
            <MenuItem mnemonicParsing="false" onAction="#listGenres" text="Listar generos" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Filmes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerMovie" text="Cadastrar filme" />
            <MenuItem mnemonicParsing="false" onAction="#listMovies" text="Listar filmes" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Salas de cinema">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerCinemaHall"
              text="Cadastrar sala de cinema" />
            <MenuItem mnemonicParsing="false" onAction="#listCinemaHalls"
              text="Listar salas de cinema" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Sessoes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerMovieSession"
              text="Cadastrar sessao" />
            <MenuItem mnemonicParsing="false" onAction="#listMovieSession" text="Listar sessoes" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Produtos">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerProduct" text="Cadastrar produto" />
            <MenuItem mnemonicParsing="false" onAction="#listProducts" text="Listar produtos" />
          </items>
        </Menu>
        <Menu fx:id="sales" mnemonicParsing="false" text="Venda">
          <items>
            <MenuItem fx:id="listSaleItem" mnemonicParsing="false" onAction="#listSales"
              text="Listar vendas" />
          </items>
        </Menu>
        <Menu fx:id="financial" mnemonicParsing="false" text="Financeiro">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#incomeReports" text="Relatórios de receita" />
          </items>
        </Menu>
        <Menu fx:id="employees" mnemonicParsing="false" text="Funcionários">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registerEmployee"
              text="Cadastrar funcionario" />
            <MenuItem mnemonicParsing="false" onAction="#listEmployees" text="Listar funcionários" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Clientes">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#listClients" text="Listar clientes" />
            <MenuItem mnemonicParsing="false" onAction="#registerClient" text="Cadastrar cliente" />
          </items>
        </Menu>
      </items>
    </Menu>
  </menus>
</MenuBar>